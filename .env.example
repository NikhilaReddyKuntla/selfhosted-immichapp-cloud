# Immich Configuration
# Copy this file to .env and configure your values
# NEVER commit .env to version control

# Immich Version
# Options: 'release' (latest stable), specific version tag (e.g., 'v1.100.0')
IMMICH_VERSION=release

# Media Library Storage Location
# Absolute path on host where uploaded photos/videos will be stored
# Example: /mnt/storage/immich/library
# IMPORTANT: Create this directory and set ownership: sudo chown -R 1000:1000 ${UPLOAD_LOCATION}
UPLOAD_LOCATION=/path/to/immich/library

# PostgreSQL Configuration
# Database credentials - use strong passwords in production
DB_PASSWORD=your_secure_postgres_password_here
DB_USERNAME=postgres
DB_DATABASE_NAME=immich

# PostgreSQL Data Storage Location
# Absolute path on host where PostgreSQL data will be stored
# Example: /mnt/storage/immich/postgres
# IMPORTANT: Create this directory and set ownership: sudo chown -R 999:999 ${DB_DATA_LOCATION}
DB_DATA_LOCATION=/path/to/immich/postgres

# Additional Immich Environment Variables (if needed)
# Refer to official Immich documentation for complete list
# IMMICH_SERVER_URL=https://photos.yourdomain.com
# IMMICH_MACHINE_LEARNING_ENABLED=true
